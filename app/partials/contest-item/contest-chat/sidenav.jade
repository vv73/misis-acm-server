md-sidenav.md-sidenav-right.md-whiteframe-z2.contest-inbox(md-component-id='right')
  md-toolbar.md-theme-light
    h1.md-toolbar-tools Сообщения
  md-content(ng-controller='RightSidenavCtrl', layout-padding)

    div(ng-if='!isMessagesLoading')
      div.contest-inbox__section.contest-inbox__section_type_unread(ng-if='messages.unread.length > 0')
        div.contest-inbox__section-title
          | Непрочитанные
        div(ng-repeat='item in messages.unread')
          md-card
            md-card-header
              md-card-avatar
                img(src='data:image/png;base64,')
              md-card-header-text
                span.md-title {{item.author.fullname}}
                span.md-subhead сообщение {{item.message.time | date:'dd.MM.yyyy в HH:mm'}}
            md-card-content
              div.markdown(marked='item.message.text')

      div.contest-inbox__section.contest-inbox__section_type_read(ng-if='messages.read.length > 0')
        div.contest-inbox__section-title
          | Прочитанные
        div(ng-repeat='item in messages.read')
          md-card
            md-card-header
              md-card-avatar
                img(src='data:image/png;base64,')
              md-card-header-text
                span.md-title {{item.author.fullname}}
                span.md-subhead(title='Отправлено {{item.message.time | date:"dd.MM.yyyy в HH:mm"}}')
                  | прочитано {{item.message.timeRead | date:'dd.MM.yyyy в HH:mm'}}
            md-card-content
              div.markdown(marked='item.message.text')

    div(ng-if='isMessagesLoading')
      div(layout='row', style='padding: 40px 0;', layout-align='center center')
        div.sent-list__loading(style='display: inline-block;')
          div.content-spin__layer
            div.search-spin-layer_
              div.search-spin